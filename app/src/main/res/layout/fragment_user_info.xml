<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UserInfo_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/myServey_btn"
            android:layout_width="195dp"
            android:layout_height="48dp"
            android:text="내가 참여한 설문"
            android:background="@drawable/round_dt"
            android:textColor="@color/white"
            android:fontFamily="@font/bmjua"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.653" />

        <EditText
            android:id="@+id/userName_edit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="이름"
            android:padding="10dp"
            android:fontFamily="@font/bmjua"
            android:textSize="14dp"
            android:background="@drawable/edittext_round"
            app:layout_constraintBottom_toTopOf="@+id/user_nickName_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />




        <EditText
            android:id="@+id/user_nickName_edit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="닉네임"
            android:padding="10dp"
            android:fontFamily="@font/bmjua"
            android:textSize="14dp"
            android:background="@drawable/edittext_round"
            app:layout_constraintBottom_toTopOf="@+id/user_class_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <EditText
            android:id="@+id/user_classNum_edit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:enabled="false"
            android:hint="학번"
            android:padding="10dp"
            android:textSize="14dp"
            android:fontFamily="@font/bmjua"
            android:background="@drawable/edittext_round"
            app:layout_constraintBottom_toTopOf="@+id/myServey_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/user_class_edit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:hint="학과"
            android:padding="10dp"
            android:fontFamily="@font/bmjua"
            android:textSize="14dp"
            android:background="@drawable/edittext_round"
            app:layout_constraintBottom_toTopOf="@+id/user_classNum_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="font : 배달의민족 주아체 made by 우아한형제들 "
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>